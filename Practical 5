%{
#include <stdio.h>
#include <stdlib.h>
#include <string.h>

void decToHex(int num) {
    char hex[100];
    int i = 0;
    if (num == 0) {
        printf("Hex: 0\n");
        return;
    }
    while (num > 0) {
        int rem = num % 16;
        if (rem < 10)
            hex[i++] = rem + '0';
        else
            hex[i++] = rem - 10 + 'A';
        num /= 16;
    }
    printf("Hex: ");
    for (int j = i - 1; j >= 0; j--)
        printf("%c", hex[j]);
    printf("\n");
}
%}
%%
[0-9]+    { 
int num = atoi(yytext);
decToHex(num);
}
.|\n        ;
%%
int yywrap() { return 1; }
int main() {
    printf("Enter a decimal number: ");
    yylex();
    return 0;
}
